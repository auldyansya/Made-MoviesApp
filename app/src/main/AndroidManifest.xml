<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.auldy.made">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="false"
        android:icon="@drawable/logo_tmdb"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_tmdb"
        android:supportsRtl="true"
        android:theme="@style/Theme.MoviesApp">

        <activity
            android:name="com.auldy.made.MainActivity"
            android:theme="@style/Theme.MoviesApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.auldy.made.detail.DetailMoviesActivity"
            android:label="@string/title_activity_detail_home"
            android:theme="@style/Theme.MoviesApp.NoActionBar" />
    </application>

</manifest>